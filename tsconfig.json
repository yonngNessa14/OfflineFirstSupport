{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@database": ["src/database"],
      "@database/*": ["src/database/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
